---
import Avatar from "./avatar.astro";
import PostHeaderTop from "./post-header-top.astro";
import type { PostComment } from "@types"
interface Props {
  comment: PostComment;
}

const { comment } = Astro.props;
---

<article class="comment__card">
  <PostHeaderTop
    name={comment.owner.name}
    id={comment.owner._id}
    username={comment.owner.username}
    content={comment.content}
    createdAt={comment.createdAt}
  />

  <Avatar src={comment.owner.avatar[0].secureUrl} alt={comment.owner.name} ownerId={comment.owner._id} title={comment.owner.name} />
</article>

<style>
  .comment__card {
    display: flex;
    width: 100%;
    padding: var(--padding_boxes);
    border: 1px solid var(--color_secondary);
  }
</style>
