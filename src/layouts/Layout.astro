---
import { ViewTransitions } from "astro:transitions";
import HeaderReact from "@components/react/header";
import Header from "@components/header.astro";
import { authStore } from "@stores/auth";
interface Props {
  page?: string;
  description?: string;
}

const { page, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />

    <ViewTransitions fallback="none" />
    <!-- SEO -->

    <title>Ask! - {page}</title>
  </head>
  <body>
    <main class="main">
      {
        authStore.get()?.userLogged !== null && (
          // <HeaderReact
          //   username={authStore.get()?.userLogged?.name}
          //   avatarSrc={authStore.get()?.userLogged?.avatar[0].secureUrl}
          //   client:only="react"
          // />

          <Header />
        )
      }
      <div class="main__container">
        <slot />
      </div>
    </main>
  </body><style is:global>
    /* FONTS */
    @font-face {
      font-family: "Titles";
      src: url(/fonts/cairo-play-latin-400-normal.ttf);
      font-weight: 400;
    }
    @font-face {
      font-family: "Primary";
      src: url(/fonts/noto-sans-meetei-mayek-latin-400-normal.ttf);
    }
    /* GLOBAL VARIABLES */
    :root {
      --color_accent: #ff8758;
      --color_accent_light: #fab093;
      --color_secondary: #c0c0c0;
      --color_secondary_text: #686868;

      --border_size: 0.5em;
      --padding_boxes: 0.8em;
      --max_w: 800px;

      --titles_font: "Titles";
      --primary_font: "Primary";
    }

    /* RESET */
    * {
      margin: 0;
      padding: 0;
    }
    *,
    *::after,
    *::before {
      box-sizing: border-box;
    }
    body {
      position: relative;
      min-height: 100dvh;
      font-family:
        var(--primary_font),
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        Roboto,
        Oxygen,
        Ubuntu,
        Cantarell,
        "Open Sans",
        "Helvetica Neue",
        sans-serif;

      transition:
        background-color 0.3s ease-in-out,
        color 0.2s ease-in;
    }
    input,
    button,
    textarea {
      font: inherit;
    }
    button {
      background: none;
      border: none;
    }
    p {
      text-wrap: pretty;
    }
    h1,
    h2 {
      text-wrap: balance;
    }
    img,
    svg {
      max-width: 100%;
      height: auto;
      color: inherit;
    }
    ul {
      list-style: none;
    }
    a {
      text-decoration: none;
      color: inherit;
    }
    /* reduce animations if user wants */
    @media (prefers-reduced-motion: reduce) {
      *,
      *::before,
      *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
        scroll-behavior: auto !important;
        transition: none;
      }
    }

    .main {
      position: relative;
      width: 100%;
      max-width: 800px;
      min-height: 100dvh;
      margin: 0 auto;
      display: flex;
      flex-flow: row-reverse;
      justify-content: center;
      align-items: start;
    }
    .main__container {
      flex: 1;
    }
  </style>
</html>
